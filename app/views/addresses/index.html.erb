<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Add l</th>
      <th>Add l2</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Country</th>
      <th>Pin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.Name %></td>
        <td><%= address.Phone %></td>
        <td><%= address.Add_L %></td>
        <td><%= address.Add_L2 %></td>
        <td><%= address.City %></td>
        <td><%= address.State %></td>
        <td><%= address.Country %></td>
        <td><%= address.Country %></td>
        <td><%= address.Pin %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

